!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Godock - Community powered Golang documentation and examples"
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    #wrap{"ng-app" => "godock"}
      %nav.top-bar{"data-topbar" => true}
        %ul.title-area
          %li.name
            %h1
              %a.navbar-brand{:href => "#"} GoDock
        %section.top-bar-section
          // right nav section
          %ul.right
            %li{"search-results" => true}
          %ul.left
            %li.divider
            %li
              %a{:href => "#"} gopkg
            %li.divider
            %li
              %a{:href => "#"} martini
            %li.divider
            %li
              %a{:href => "#"} mgo
            %li.divider
      .container
        = yield
      #footer
        .container
          %p.text-muted &copy;Copyright 2013 Isaiah P.

      = javascript_include_tag "application", "data-turbolinks-track" => true
